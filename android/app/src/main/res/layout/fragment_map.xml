    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.landet.landet.MapFragment">

    <com.landet.landet.utils.ZoomableViewGroup
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/map"
            android:layout_width="2000px"
            android:layout_height="2000px"
            android:contentDescription="@string/map_tab"/>

    </com.landet.landet.utils.ZoomableViewGroup>

</RelativeLayout>